#include <bits/stdc++.h>
#include <iostream>
using namespace std;

int main() {

  int i ;

  string s,word,p;
  cout<<"Enter the text to be encrytped: ";
  getline(cin,s);

  stringstream ss(s);
  while(ss>>word)
  {
    p.append(word);
  }

  int count=0,j;
  int n=(p.size()/4)+1;
  char a[n][4];

  for(i=0;i<n;i++)
  {
    for(j=0;j<4;j++)
    {
      if(count<p.size())
        a[i][j]=p[count++];
      else break;
    }
  }
  
  for(i=0;i<n;i++)
  {
    for(j=0;j<4;j++)
    {
      if((a[j][i]>=65&&a[j][i]<=90) ||( a[j][i]>=97 && a[j][i]<=122))
          cout<<a[j][i];
    }
  }
  for(i=0;i<n;i++)
  {
    for(j=0;j<4;j++)
    {
        if((a[i][j]>=65&&a[i][j]<=90) ||( a[i][j]>=97 && a[i][j]<=122))
          cout<<a[i][j];
    }
  }
return 0;
}
