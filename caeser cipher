#include <iostream>
using namespace std;

int main() {
	// your code goes here
	string  s;
		cout<<"Enter the text to be encrytped\n";
		cin>>s;
		int k=0;
    
		cout<<"enter key\n";
		cin>>k;
    
		cout<<" encrytped text is\n";
		int n=s.size();
		int a[26],p=97;
    
		for(int i=0;i<26;i++)
		{
			a[i]=p++;
		}
			for(int i=0;i<n;i++)
		{
			int y=s[i]-'a';
			s[i]=a[(y+k)%26];
		}
    
		cout<<s<<endl;
		cout<<"Decrytped text is\n";
			for(int i=0;i<n;i++)
		{
			int y=s[i]-'a';
			s[i]=a[(y-k+26)%26];
		}
		cout<<s<<endl;
	return 0;
}
